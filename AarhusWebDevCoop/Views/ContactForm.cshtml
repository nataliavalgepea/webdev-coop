@model AarhusWebDevCoop.ViewModels.ContactForm
@{
    Layout = null;
}

@if (TempData["success"] == null)
{
    // display the form - put the normal form code here


    using (Html.BeginUmbracoForm("HandleFormSubmit", "ContactFormSurface"))
    {
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                <p class="help-block text-danger">
                    @Html.ValidationMessageFor(m => m.Name)
                </p>
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address" })
                <p class="help-block text-danger">
                    @Html.ValidationMessageFor(m => m.Email)
                </p>
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                @Html.LabelFor(m => m.Subject)
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "SUbject" })
                <p class="help-block text-danger">
                    @Html.ValidationMessageFor(m => m.Subject)
                </p>
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                @Html.LabelFor(m => m.Message)
                @Html.TextBoxFor(m => m.Message, new { @class = "form-control", placeholder = "Your message" })
                <p class="help-block text-danger">
                    @Html.ValidationMessageFor(m => m.Message)
                </p>
            </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="row">
            <div class="form-group col-xs-12">
                <button type="submit" class="btn btn-default">Send</button>
            </div>
        </div>
    }
}
else
{
    <p>Thank you for contacting us. We’ll be in touch soon!</p>
}